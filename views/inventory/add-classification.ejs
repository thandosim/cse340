<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="classification-form" action="/inv/classification" method="POST" onsubmit="validateForm(event)">
    <label for="classification_name">Classification Name:</label>
    <input type="text" id="classification_name" name="classification_name" required value="<%= locals.classification_name %>">
    <button type="submit">Add Classification</button>
</form>
