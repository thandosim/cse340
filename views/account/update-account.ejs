<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/');
} %>

<%- messages() %>

<section id="update">
    <!-- <h2>Update Account Information</h2> -->

    <!-- Account Update Form -->
    <form action="/account/update" method="POST">
        <fieldset>
            <legend>Account Update</legend>

            <!-- First Name -->
            <label for="account_firstname">First Name:</label>
            <input type="text" id="account_firstname" name="account_firstname"
                   value="<%= locals.account.account_firstname %>" required>

            <!-- Last Name -->
            <label for="account_lastname">Last Name:</label>
            <input type="text" id="account_lastname" name="account_lastname"
                   value="<%= locals.account.account_lastname || '' %>" required>

            <!-- Email -->
            <label for="account_email">Email Address:</label>
            <input type="email" id="account_email" name="account_email"
                   value="<%= locals.account.account_email %>" required>

            <!-- Hidden Account ID -->
            <input type="hidden" name="account_id" value="<%= locals.account.account_id %>">

            <button type="submit">Update Account</button>
        </fieldset>
    </form>

    <br>

    <!-- Change Password Form -->
    <form action="/account/change-password" method="POST">
        <fieldset>
            <legend>Change Password</legend>

            <p>Enter a new password to replace your current one. Ensure it meets security requirements.</p>

            <!-- New Password -->
            <label for="new_password">New Password:</label>
            <input type="password" id="new_password" name="new_password" required>

            <!-- Hidden Account ID -->
            <input type="hidden" name="account_id" value="<%= locals.account.account_id %>">

            <button type="submit">Change Password</button>
        </fieldset>
    </form>
</section>
